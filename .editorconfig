# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{jshintrc,json,yml,feature}]
indent_size = 2

[{*.txt,wp-config-sample.php}]
end_of_line = crlf

[composer.json]
indent_size = 4
